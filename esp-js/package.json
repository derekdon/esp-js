{
  "name": "esp-js",
  "version": "2.0.0",
  "description": "Evented State Processor (ESP) adds specific processing workflow around changes to a model's state",
  "keywords": [
    "state processor",
    "evented state processor",
    "reactive",
    "event loop",
    "complex state processor",
    "router",
    "event router"
  ],
  "scripts": {
    "test-ci": "jest --verbose",
    "build-dev": "export NODE_ENV=dev&& webpack --display-reasons --display-error-details",
    "build-prod": "export NODE_ENV=prod&& webpack --display-reasons --display-error-details",
    "start": "webpack --watch",
    "test": "jest --watchAll --no-cache"
  },
  "main": "dist/esp.js",
  "author": "Keith Woods",
  "license": "Apache-2.0",
  "repository": "https://github.com/esp/esp-js",
  "typings": "./.dist/typings/index.d.ts",
  "devDependencies": {
    "@types/jest": "23.1.6",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.0",
    "babel-loader": "7.1.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.5.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-polyfill": "^6.20.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "4.19.1",
    "eslint-loader": "2.0.0",
    "inject-loader": "4.0.1",
    "jasmine-core": "3.1.0",
    "jest": "23.4.1",
    "regenerator-runtime": "^0.12.0",
    "source-map-loader": "0.2.3",
    "ts-loader": "4.4.2",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "2.9.2",
    "webpack": "4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "3.1.4"
  },
  "dependencies": {},
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/tests/__jest__/configureEspLogging.ts"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "<rootDir>/tests/__jest__/typeScriptPreprocessor.ts"
    },
    "testMatch": [
      "**/tests/**/*Tests.[jt]s"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
