{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build-dev": "lerna run build-dev",
    "build-prod": "lerna run build-prod",
    "trash": "./scripts/trash.sh && yarn clean && lerna clean && rm -rf ./node_modules",
    "clean": "lerna run clean",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*' --preid=next",
    "update-prerelease-version": "yarn update-version --cd-version=prerelease",
    "update-premajor-version": "yarn update-version --cd-version=premajor",
    "check-packages": "yarn clean && yarn compile && yarn test"
  },
  "devDependencies": {
    "@types/classnames": "2.2.6",
    "@types/jest": "23.3.0",
